<div class="card bg-yellow-500 shadow-xl max-w-2xl mx-auto">
    <div class="card-body text-black">
        <h3 class="card-title text-3xl font-bold text-center mb-6 relative">
            <span class="relative z-10 ">Gift Suggestions</span>
            <svg class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-48 h-12 text-black opacity-10 z-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M18 5h-2V3a1 1 0 00-1-1H5a1 1 0 00-1 1v2H2a2 2 0 00-2 2v3a2 2 0 002 2h1v6a2 2 0 002 2h10a2 2 0 002-2v-6h1a2 2 0 002-2V7a2 2 0 00-2-2zm-4 12H6v-6h8v6zm2-8H4V5h12v4z" />
            </svg>
        </h3>
        <div class="bg-yellow-100 rounded-lg p-6 shadow-inner">
            @((MarkupString)GeneratedHtml)
        </div>
        <div class="card-actions justify-center mt-6">
            <button @onclick="Close" class="btn btn-accent text-black">
                Close
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string GeneratedHtml { get; set; }
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;
    private async Task Close()
    {
        await BlazoredModal.CloseAsync();
    }
}
